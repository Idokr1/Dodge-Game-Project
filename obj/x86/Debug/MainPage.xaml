<Page
    x:Class="Dodge_Game_Project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dodge_Game_Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas x:ConnectionId='2' x:Name="layoutRoot">
            <Button x:ConnectionId='3' x:Name="btnStart" Content="Start" Height="68" Canvas.Left="1" Width="100" FontWeight="Bold" FontSize="18"                        Background="#7F1EA927" BorderThickness="2,2,2,2" BorderBrush="Black" Canvas.Top="2"/>
            <Button x:ConnectionId='4' x:Name="btnPause" Content="Pause" Height="68" Canvas.Left="1" Canvas.Top="72" Width="100" FontWeight="Bold" FontSize="18"                        BorderBrush="Black" Background="#33FF0000"/>
            <Button x:ConnectionId='5' x:Name="btnContinue" Content="Continue" Height="68" Canvas.Left="1" Canvas.Top="142" Width="100" FontWeight="Bold" FontSize="18"                           BorderBrush="Black" Background="#7F0090FF"/>
            <TextBlock x:ConnectionId='6' x:Name="txtDeadEnemies" Height="49" Canvas.Left="138" TextWrapping="Wrap" Text="Dead Enemies: 0/9" Canvas.Top="10" Width="245" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="25" FontWeight="Bold"/>
            <TextBlock x:ConnectionId='7' x:Name="txtGameStatus" Height="55" Canvas.Left="1252" TextWrapping="Wrap" Text="" Canvas.Top="5" Width="240" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" TextAlignment="Center"/>
        </Canvas>
    </Grid>
</Page>

